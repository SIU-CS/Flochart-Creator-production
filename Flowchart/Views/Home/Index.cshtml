@{
    ViewData["Title"] = "Home Page";
}

@using Microsoft.AspNetCore.Identity

@using FlowchartCreator.Models

@inject SignInManager<ApplicationUser> SignInManager

@inject UserManager<ApplicationUser> UserManager
<div class="container homepage-container">
    <div class="row">
        <div class="homepage-header col-xs-12">
            <p class="header-intro">Welcome to:</p>
            <h1 class="header-title">
                <span>Flowchart</span>
                <br>
                <span>Creator</span>
            </h1>
        </div>
    </div>

    @if (SignInManager.IsSignedIn(User)) {
    <div class="row homepage-links">
        <div class="col-xs-12">
            <a href="/Flowchart/Create">
                <button class="btn btn-success create-flowchart-button">
                Create a Flowchart
            </button>
            </a>
        </div>
    </div>
    } else {
    <div class="row homepage-links">
        <div class="col-xs-12 col-sm-6">
            <a asp-controller="Account" asp-action="Login">
                <button class="btn btn-primary login-button">
        Log In
        </button>
            </a>
        </div>
        <div class="col-xs-12 col-sm-6">
            <a asp-controller="Account" asp-action="Register">
                <button class="btn btn-success signup-button">
            Sign Up
            </button>
            </a>
        </div>
    </div>
    }
</div>